<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Pictures" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Pictures</h1>
    <%= link_to "New picture", new_picture_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="pictures" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 min-w-full">
    <% @pictures.each do |picture| %>
      <div class="bg-white p-4 rounded-lg shadow flex flex-col justify-between">
        <%= render picture %>

        <div class="flex justify-between items-end mt-auto">
          <%= image_tag "thumbs-up-regular.svg", alt: "Thumbs Up", class: "w-16 h-16" %>
          <%= image_tag "thumbs-down-regular.svg", alt: "Thumbs Down", class: "w-16 h-16" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
