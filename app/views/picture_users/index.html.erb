<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Picture users" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Picture users</h1>
    <%= link_to "New picture user", new_picture_user_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="picture_users" class="min-w-full">
    <% @picture_users.each do |picture_user| %>
      <%= render picture_user %>
      <p>
        <%= link_to "Show this picture user", picture_user, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
