<%= form_with(model: picture_user, class: "contents") do |form| %>
  <% if picture_user.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(picture_user.errors.count, "error") %> prohibited this picture_user from being saved:</h2>

      <ul>
        <% picture_user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :picture_id %>
    <%= form.text_field :picture_id, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :like %>
    <%= form.check_box :like, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
    <%= form.label :dislike %>
    <%= form.check_box :dislike, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
